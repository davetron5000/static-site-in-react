{
  "name": "static-site-in-react",
  "version": "1.0.0",
  "description": "Generate a static website using React as a template language only",
  "main": "index.js",
  "author": "David Copeland",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "chalk": "^2.4.2",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.2.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "local-web-server": "^3.0.7",
    "markdown-it": "^10.0.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-html-parser": "^1.1.16",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "sprintf-js": "^1.1.2",
    "tachyons": "^4.11.1",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.8",
    "webpack-dev-server": "^3.8.1",
    "webpack-merge": "^4.2.2"
  },
  "scripts": {
    "test": "jest",
    "production:build": "BUILD_ENV=production yarn build",
    "production:serve": "BUILD_ENV=production yarn serve",
    "dev": "echo run 'yarn dev:build:watch' in one terminal and 'yarn dev:webpack:watch' in the other",
    "dev:build:watch": "find root/site -not -path '*/\\.*' | entr yarn build:webpack_input",
    "dev:webpack:watch": "webpack-dev-server --config=src/webpack.config.js --open",
    "serve": "node src/commands/serve.js",
    "build": "yarn build:webpack_input && yarn build:webpack_output",
    "build:webpack_input": "node src/commands/build.js",
    "build:webpack_output": "NODE_DISABLE_COLORS=1 webpack --config=src/webpack.config.js  --verbose --display-error-details --no-color"
  }
}
